# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=False

# NodeODM Settings
ODM_NODE_HOST=nodeodm
ODM_NODE_PORT=3000
ODM_NODE_TOKEN=

# Storage Settings
MAX_UPLOAD_SIZE=524288000  # 500MB in bytes
RESULTS_PATH=./results
UPLOAD_PATH=./backend/uploads
CLEANUP_DAYS=1  # Delete old uploads after N days (1 day recommended)
