PROCESSING_TIMEOUT=1800  # 30 minutes in seconds
DEFAULT_QUALITY=medium  # low, medium, high
DEFAULT_FEATURE_QUALITY=high
DEFAULT_MESH_SIZE=200000

# Redis Configuration (for async tasks)
