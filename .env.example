# Database
DATABASE_URL=sqlite:///./backend/projects.db

# CORS Settings
ALLOWED_ORIGINS=http://localhost:8000,http://localhost:3000

# Security
SECRET_KEY=your-secret-key-change-this-in-production

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log